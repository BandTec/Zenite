<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--tools:context=""-->


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/azulClaro">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:padding="25dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_logo_zenite" />

    </com.google.android.material.appbar.AppBarLayout>

    <!--Ajustar Icone e função VOLTAR-->
    <ImageView
        android:id="@+id/icVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fitsSystemWindows="true"
        android:onClick="onBackPressed"
        android:padding="25dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_voltar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titulo"
        style="@style/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background"
        android:layout_marginHorizontal="20sp"
        android:text="ESQUECEU SUA SENHA?" />

    <TextView
        android:id="@+id/lbEmail"
        style="@style/TextoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:text="Digite seu email no campo abaixo e voce recebera um email para renovar sua senha."
        android:textColor="@color/preto" />

    <EditText
        android:id="@+id/inputRecuperarSenha"
        style="@style/Input"
        android:hint="Email"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btnEnviarEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:onClick="enviarEmailRecuperacao"
        android:text="Enviar" />


</LinearLayout>