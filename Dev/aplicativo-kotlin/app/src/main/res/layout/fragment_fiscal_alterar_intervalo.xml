<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fiscal.fiscal_alterar_intervalo">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        style="@style/Titulo"
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="100dp"
        android:layout_alignBottom="@id/background"
        android:text="ESQUECEU SUA SENHA?"
        />
    <TextView
        style="@style/TextoBold"
        android:textColor="@color/preto"
        android:id="@+id/lbEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:text="Digite seu email no campo abaixo e voce recebera um email para renovar sua senha."
        />

    <EditText
        style="@style/Input"
        android:inputType="textEmailAddress"
        android:id="@+id/inputEmail"
        android:hint="Email"/>

    <Button
        android:id="@+id/btnEntrar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:onClick="EnviarEmailRecuperacao"
        tools:ignore="OnClick"
        android:text="Enviar"
       />


</LinearLayout>