<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="o">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/corFundo</item>
        <item name="colorPrimaryDark">@color/corTitulo</item>
        <item name="colorAccent">@color/corTitulo</item>
        <item name="titleTextColor">@color/corTitulo</item>
    </style>

    <!--   ESTILOS CUSTOMIZADOS ZENITE  -->
    <!--  TEXTOS  -->
    <style name="Titulo" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/corTitulo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="Texto" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/corTextos</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextoItalico" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/corTextos</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/open_sans_italic</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextoBold" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/corTextos</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--  BOTAO  -->
    <style name="Botao">
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>

        <item name="android:padding">20sp</item>

        <item name="android:background">@drawable/botao_customizado</item>

        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">20dp</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--  CAMPO DE TEXTO  -->
    <!--    https://www.youtube.com/watch?v=BO5iCL7U6Lc -->
    <style name="Input">
        <item name="android:textColor">@color/corTextos</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans</item>

        <item name="android:padding">15sp</item>

        <item name="android:background">@drawable/custom_input</item>

        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">20dp</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--  LABEL DO CAMPO DE TEXTO  -->
    <style name="Label" parent="TextoBold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:textColor">@color/corTitulo</item>

        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>